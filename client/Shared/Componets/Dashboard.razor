<PageTitle>Task Exchange | Dashboard</PageTitle>
@rendermode InteractiveAuto
<section class="mt-[3.8rem] w-[79%] px-4 bg-[#fcfcfc] rounded-tl-[20px]">
  <div class="min-h-screen ">
    <button class="bg-red-500 px-4 py-2 cursor-pointer hover:bg-black mt-[10rem]" onclick="@IncrementCount();">Test button</button>
  
    <p>Current count: @currentCount</p>
  </div>
</section>

@code {
  int currentCount = 0;

  private async Task IncrementCount()
  {
    Console.WriteLine("I hate blazor");
    await Task.Run(() => currentCount++);
    Console.WriteLine(currentCount);
  }
}